{
  "compilerOptions": {
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
