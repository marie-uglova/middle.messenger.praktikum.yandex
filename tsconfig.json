{
  "compilerOptions": {
    "module": "es2022",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "components": ["src/components"]
    },
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
  },
  "exclude": ["node_modules"]
}
